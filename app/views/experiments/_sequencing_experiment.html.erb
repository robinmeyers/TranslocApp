<tr>
  <%= content_tag :td, experiment.name, class: "" %>
  <%= content_tag :td, experiment.researcher.name , class: "" %>
  <%= content_tag :td, content_tag(:span, experiment.mid, class: "mid") +
        content_tag(:span, experiment.primer, class: "primer"), class: "" %>
  <% if current_researcher.present? && current_researcher.admin? || current_researcher == experiment.researcher %>
    <%= content_tag :td, (link_to "edit", experiment, method: :edit) + " | " +
                         (link_to "delete", experiment, method: :delete,
        data: { confirm: "Are you sure you want to delete #{experiment.name}?"}) %>
  <% else %>
    <%= content_tag :td, "" %>
  <% end %>

</tr>