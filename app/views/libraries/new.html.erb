<% provide(:title, "New Library") %>
<h1>Create New Library in <%= @sequencing.run %></h1>
<%= form_for(@library) do |f| %>
  <%= f.hidden_field :sequencing_id, :value => @library.sequencing.id %>
  <%= render 'libraries/library_fields', f: f %>
  <div class="row">
    <div class="center">
      <%= f.submit "Create Library", class: "btn btn-large btn-primary" %>
    </div>
  </div>
<% end %>
<h2>OR</h2>
<h1>Import Libraries from Spreadsheet</h1>

<%= form_for(@library_import) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= f.hidden_field :sequencing_id, :value => @library.sequencing.id %>
  <div class="center">
    <%= f.file_field :file, class: "filestyle", 'data-classButton' => "btn btn-file", 'data-buttonText' => "Select file" %>

  </div>

  <div class="row center">
    <%= f.submit "Import Libraries", class: "btn btn-large btn-primary" %>
  </div>
<% end %>
