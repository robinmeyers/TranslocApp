<% provide(:title, @library.name) %>
<% javascript 'libraries' %>
<div class="row">
  <h1><%= @library.name %></h1>
  <h3 class="center">Junctions (<%= @junctions_count %>)</h3>
</div>
<div class="container">
  <ul class="nav nav-tabs">
    <li class="active"><a href="#junction-table" data-toggle="tab">Table</a></li>
    <li><a href="#junction-sequences" data-toggle="tab">Sequences</a></li>
    <li><a href="#junction-viewer" data-toggle="tab">Viewer</a></li>
  </ul>
  <div class="tab-content">  
    <div id="junction-table" class="tab-pane active">
      <div class="span6 offset3">
      
        <% if @junctions_count > 0 %>
          
          <table class="table table-hover table-condensed">
            <thead>
              <tr>
                <th>Rname</th>
                <th>Junction</th>
                <th>Strand</th>
              </tr>
            </thead>
            <tbody></tbody>
          </table>
        <% end %>
      </div>
    </div>
    <div id="junction-viewer" class="tab-pane">
      <h3>A full javascript app? No way!</h3>
      <div id="transloc-viz" style="width:940px; height:500px;"></div>
    </div>

    <div id="junction-sequences" class="tab-pane">
      <h3>Put some Sequences here</h3>
    </div>
  </div>
</div>