<tr>
  <%= content_tag :td, library.name, class: "" %>
  <%= content_tag :td, library.researcher.name , class: "" %>
  <%= content_tag :td, content_tag(:span, library.mid, class: "mid") +
        content_tag(:span, library.primer, class: "primer"), class: "" %>
  <% if current_researcher.present? && current_researcher.admin? || current_researcher?(library.researcher) %>
    <%= content_tag :td, (link_to "edit", edit_library_path(library, return_to: request.path)) + " | " +
                         (link_to "delete", library_path(library, return_to: request.path), method: :delete,
        data: { confirm: "Are you sure you want to delete #{library.name}?"}) %>
  <% else %>
    <%= content_tag :td, "" %>
  <% end %>

</tr>