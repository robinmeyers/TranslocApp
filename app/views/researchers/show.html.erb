<% provide(:title, @researcher.name) %>
<div class="row">
  <aside class="span3">
    <section>
      <h1>
        <%= gravatar_for @researcher %>
        <%= @researcher.name %>
      </h1>
    </section>
  </aside>
  <div class="span9">
    <% if @researcher.experiments.any? %>
      <h3>Experiments (<%= @researcher.experiments.count %>)</h3>
      <table class="table table-hover table-condensed">
        <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Genome</th>
            <th>BreakSite</th>
            <th>Cutter</th>
          </tr>
        </thead>
        <tbody>
          <%= render partial: 'experiments/researcher_experiment',
            collection: @researcher.experiments, as: 'experiment' %>
        </tbody>
      </table>
      <%= will_paginate @experiments %>
    <% end %>
  </div>
</div>