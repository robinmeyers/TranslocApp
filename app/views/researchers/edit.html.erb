<% provide(:title, "Settings") %>
<h1>Update your profile</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@researcher) do |f| %>
      <%= render 'fields', f: f %>
      <% if Settings.adminkey.present? %>
        <%= f.label :adminkey, "Admin Key" %>
        <%= f.password_field :adminkey %>
      <% end %>
      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>

    <%= gravatar_for @researcher %>
    <a href="http://gravatar.com/emails">change</a>
  </div>
</div>